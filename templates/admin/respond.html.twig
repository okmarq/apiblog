{% extends 'base.html.twig' %}

{% block title %}Hello VRequestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div class="mb-3">
            <a href="{{ path('app_register') }}">Register</a> | <a href="{{ path('app_login') }}">Login</a>
        </div>
    {% endif %}

    <h1>Hello {{ firstname }} {{ lastname }}! ✅</h1>

    <p>This friendly message is coming from Locastic Blog API ✅:</p>
    <p>Your response to {{ vr_firstname }} {{ vr_lastname }} </p>

    {{ form_start(form) }}
        {{ form_row(form.status) }}
        {{ form_row(form.reason) }}
        {{ form_row(form.save) }}
    {{ form_end(form) }}
</div>
{% endblock %}
