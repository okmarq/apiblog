{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <h1>Hello {{ firstname }} {{ lastname }}! ✅</h1>
    {% else %}
        <h1>Hello {{ guest }}! ✅</h1>
    {% endif %}

    <p>You're welcome! ✅</p>

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div class="mb-3">
            <a href="{{ path('app_register') }}">Register</a> | <a href="{{ path('app_login') }}">Login</a>
        </div>
    {% endif %}


    <p>This friendly message is coming from Locastic Blog API:</p>
    
    <ul>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li>Go to your <a href="{{ path('dashboard') }}">dashboard page</a> to see our blog posts</li>
        {% else %}
            <li><a href="{{ path('app_register') }}">Register</a> or <a href="{{ path('app_login') }}">Login</a> to see our blog posts</li>
        {% endif %}

        {% if is_granted('ROLE_BLOGGER') %}
        {% else %}
            <li>Then request a verification to attain a bloger role</li>
            <li>As soon as our admin approves your request</li>
        {% endif %}
        <li>you can create read, update and delete your own posts</li>
    </ul>
</div>
{% endblock %}
