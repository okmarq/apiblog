{% extends 'base.html.twig' %}

{% block title %}Hello VRequestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div class="mb-3">
            <a href="{{ path('app_register') }}">Register</a> | <a href="{{ path('app_login') }}">Login</a>
        </div>
    {% endif %}

    <h1>Hello {{ firstname }} {{ lastname }}! ✅</h1>

    {% if controller_name == 'Create' %}
        <p>making request</p>
    {% else %}
        <p>Editing request</p>
    {% endif %}

    <p>This friendly message is coming from Locastic Blog API Admin ✅:</p>
    <ul>
        <li>Submit your request in the form below</li>
            
        {{ form_start(form) }}
            {{ form_row(form.idImage) }}
            {{ form_row(form.message) }}
            {{ form_row(form.save) }}
        {{ form_end(form) }}

        {% for datum in data %}
            {% if(datum.status != "none") %}
                <li>ID: {{ datum.idImage }}</li>
                <li>ID: {{ datum.message }}</li>
                <li>Request: {{ datum.status }}</li>
                <li>Response: {{ datum.reason }}</li>
                <li>Role: {{ datum.role}}</li>
                <li>ID: {{ datum.createdAt }}</li>
                <li>ID: {{ datum.modifiedAt ?? 'no update yet' }}</li>

                {% if controller_name == 'Create' %}
                    <a href="{{ path('update_request', {id: datum.id}) }}">Update request</a>
                {% endif %}
            {% endif %}
        {% endfor %}
    </ul>
</div>
{% endblock %}
