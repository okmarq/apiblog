{% extends 'base.html.twig' %}

{% block title %}Hello VRequestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div class="mb-3">
            <a href="{{ path('app_register') }}">Register</a> | <a href="{{ path('app_login') }}">Login</a>
        </div>
    {% endif %}

    <h1>Hello {{ firstname }} {{ lastname }}! ✅</h1>

    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <p>This friendly message is coming from Locastic Blog API Admin ✅:</p>
    <ul>
        <li>Submit your request in the form below</li>
        {% for datum in data %}
            {% if(datum.status != "none") %}
                <li>ID: {{ datum.idImage }}</li>
                <li>ID: {{ datum.message }}</li>
                <li>Request: {{ datum.status }}</li>
                <li>Response: {{ datum.reason }}</li>
                <li>Role: {{ datum.role}}</li>
                <li>ID: {{ datum.createdAt }}</li>
                <li>ID: {{ datum.modifiedAt ?? 'no update yet' }}</li>

                <a href="{{ path('show_request', {id: app.user.id}) }}">Update request</a>
            {% else %}
                {{ form_start(form) }}
                    {{ form_row(form.idImage) }}
                    {{ form_row(form.message) }}
                    {{ form_row(form.save) }}
                {{ form_end(form) }}
            {% endif %}
        {% endfor %}
    </ul>
</div>
{% endblock %}
