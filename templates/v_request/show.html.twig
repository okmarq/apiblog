{% extends 'base.html.twig' %}

{% block title %}Hello VRequestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <div class="mb-3">
            <a href="{{ path('app_register') }}">Register</a> | <a href="{{ path('app_login') }}">Login</a>
        </div>
    {% endif %}

    <h1>Hello {{ firstname }} {{ lastname }}! ✅</h1>

    <p>This friendly message is coming from Locastic Blog API Admin ✅:</p>
    <ul>
        {% if(status == 'Verification requested') %}
            <li><a href='{{ path('update_request', {id: id}) }}'>Edit</a> your request</li>
        {% endif %}

        <li>ID: {{ idImage }} <img src="{{ asset('uploads/images/' ~ idImage) }}" alt="ID image" width="250" height="250"></li>
        <li>Message: {{ message }}</li>
        <li>Current status: {{ status }}</li>
        <li>Request made at: {{ createdAt }}</li>
        <li>Request modified at: {{ modifiedAt }}</li>
        <span>Admin's reason: {{ reason }}</span>
    </ul>
</div>
{% endblock %}
