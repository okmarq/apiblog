{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ firstname }} {{ lastname }}! âœ…</h1>

    {% if is_granted('ROLE_BLOGGER') %}
        <div class="mb-3">
            <a href='{{ path('create_post') }}'>Create new Post</a>
            <a href='{#{ path('update_post', {'id': post.id}) }#}'>Edit Post</a>
            <a href='{#{ path('delete_post', {'id': post.id}) }#}'>Delete Post</a>
        </div>
    {% else %}
        <div class="mb-3">
            <span><a href='{{ path('v_request') }}'>Request a Verification</a> to attain a Bloger role</span>
        </div>
    {% endif %}

    <ul>
        {% for post in posts %}
            <li>
                <a href='{{ path('show_post', {id: post.id}) }}'>{{post.title}}</a>
            </li>
        {% else %}
            <li>no post found</li>
        {% endfor %}
    </ul>

    <p>This is where the single post will be with links to edit, delete or create new</p>
</div>
{% endblock %}
