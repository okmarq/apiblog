{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ firstname }} {{ lastname }}! âœ…</h1>

    {% if is_granted('ROLE_BLOGGER') %}
        <div class="mb-3">
            <span class="">
                <a href='{{ path('create_post') }}'>Create new Post</a>
            </span>

            <span class="">
                <a href='{{ path('update_post', {'id': post.id}) }}'>Edit this Post</a>
            </span>

            <span class="">
                <a href='{{ path('delete_post', {'id': post.id}) }}'>Delete this Post</a>
            </span>
        </div>
    {% else %}
        <div class="mb-3">
            <span><a href='{{ path('v_request') }}'>Request a Verification</a> to attain a Bloger role</span>
        </div>
    {% endif %}

    <div class="mb-3">
        {% if(post) %}
            <div class="mb-3">
                <small>Author: {{ post.firstname }} {{ post.lastname }}</small><br>
                <small>published: {{ post.modifiedAt ?? post.createdAt }}</small>
            </div>
            <b>{{ post.title }}</b>
            <p>{{ post.content }}</p>
        {% else %}
            <li>no post found</li>
        {% endif %}
    </div>
</div>
{% endblock %}
